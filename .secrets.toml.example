# Example secrets configuration file
# Copy this file to .secrets.toml and fill in your actual values
# DO NOT commit .secrets.toml to version control

[default]
# Encryption key for storing OAuth refresh tokens in database
# Generate new key with: uv run python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY = "REPLACE_WITH_GENERATED_KEY"

# Flask secret key for session signing (optional, auto-generated if not set)
# Generate with: uv run python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY = "your-flask-secret-key-here"

[local]
# OAuth credentials file (local development)
# Download from Google Cloud Console: https://console.cloud.google.com/apis/credentials
client_secrets_file = "client_secret.json"

# Google Cloud service account for TTS (local development)
# Download from Google Cloud Console: https://console.cloud.google.com/iam-admin/serviceaccounts
google_cloud_service_account_file = "google-cloud-service-account.json"

[production]
# In production (Railway), set these as environment variables instead:
#
# Required:
# - LANGTUT_ENCRYPTION_KEY = "your-fernet-key"
# - LANGTUT_CLIENT_SECRETS_JSON = '{"web": {"client_id": "...", "client_secret": "...", ...}}'
# - LANGTUT_GOOGLE_CLOUD_SERVICE_ACCOUNT_JSON = '{"type": "service_account", "project_id": "...", ...}'
#
# Optional:
# - LANGTUT_SECRET_KEY = "your-flask-secret-key"
